<UserControl x:Class="RPGUtility.Controls.Memo"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:RPGUtility.Controls"
             mc:Ignorable="d" 
             d:DesignHeight="80" d:DesignWidth="700"
             Background="Beige"
             MouseDoubleClick="OpenEditWindow"
             Margin="0, 5, 0, 5">
    <Grid>
        <Border BorderBrush="Black" BorderThickness="2">
            <StackPanel>
                <TextBlock Text="Memo Title"
                           FontSize="20"
                           x:Name="titleTextBlock"
                           Margin="10, 10, 0 , 0"
                           FontWeight="Bold"/>
                <TextBlock x:Name="contentTextBlock"
                           TextWrapping="Wrap"
                           Margin="10"
                           FontSize="16"
                           Text="This is a sample memo content. You can edit this text to add your own notes or reminders..."
                           Foreground="DimGray"/>
            </StackPanel>
        </Border>
        <Grid.ContextMenu>
            <ContextMenu>
                <MenuItem Header="Edit" x:Name="editMenuItem" Click="OpenEditWindow" />
                <MenuItem Header="Delete" x:Name="deleteMenuItem" Click="deleteMenuItem_Click" />
            </ContextMenu>
        </Grid.ContextMenu>
    </Grid>
</UserControl>
