<UserControl x:Class="RPGUtility.Controls.Calendar"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:RPGUtility.Controls"
             mc:Ignorable="d" 
             d:DesignHeight="440" d:DesignWidth="720"
             Background="LightGray" >
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition />
            <RowDefinition Height="12*"/>
        </Grid.RowDefinitions>
        <StackPanel Orientation="Horizontal"
                    HorizontalAlignment="Center">
            <Button Content="◀️"
                    x:Name="PrevMonthButton"
                    Click="PrevMonthButton_Click"
                    VerticalAlignment="Center"
                    Height="25"
                    />
            <TextBlock x:Name="MonthYearText"
                       FontSize="20"
                       FontWeight="Bold"
                       VerticalAlignment="Center"
                       Margin="10,0"
                       Text="January"/>
            <Button Content="▶️"
                    x:Name="NextMonthButton"
                    Click="NextMonthButton_Click"
                    VerticalAlignment="Center"
                    Height="25"
                    />
        </StackPanel>
        <ScrollViewer Grid.Row="2"
                      VerticalScrollBarVisibility="Auto"
                      HorizontalScrollBarVisibility="Disabled">
            <WrapPanel x:Name="DaysPanel"
                       Margin="10"
                       Orientation="Horizontal"
                       />
        </ScrollViewer>
    </Grid>
</UserControl>
