<UserControl x:Class="WpfApp1.Controls.Clock"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:WpfApp1.Controls"
             mc:Ignorable="d" 
             d:DesignHeight="70" d:DesignWidth="800">
    <Grid>
        <StackPanel Orientation="Vertical">
            <TextBlock x:Name="clockName" 
                       FontSize="20" />
            <StackPanel Orientation="Horizontal" 
                        x:Name="clockStack" 
                        CanHorizontallyScroll="True" 
                        MouseLeftButtonDown="clockStack_MouseLeftButtonDown" 
                        MouseRightButtonDown="clockStack_MouseRightButtonDown">
            </StackPanel>
        </StackPanel>
    </Grid>
</UserControl>
