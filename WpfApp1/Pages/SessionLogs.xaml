<Page x:Class="WpfApp1.Pages.SessionLogs"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:WpfApp1.Pages"
      xmlns:usercontrols="clr-namespace:WpfApp1.Controls"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="SessionLogs"
      Background="LightGray">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="89*"/>
            <ColumnDefinition Width="711*"/>
        </Grid.ColumnDefinitions>
        <Button x:Name="addSessionLogButton"
                        VerticalAlignment="Center"
                        HorizontalAlignment="Center"
                        Content="+"
                        FontSize="50"
                        Width="50"
                        Background="LightGreen"
                        Click="addSessionLogButton_Click"/>
        <ScrollViewer Grid.Column="1" VerticalScrollBarVisibility="Auto">
            <WrapPanel x:Name="sessionLogsWrapPanel"
                       Orientation="Horizontal"
                       >
                <usercontrols:SessionLog SessionNumber="1" LogTitle="The Adventure of a big long thing that never ends never ever" />
                <usercontrols:SessionLog SessionNumber="2" LogTitle="A Shorter Title" />
            </WrapPanel>
        </ScrollViewer>
    </Grid>
</Page>
