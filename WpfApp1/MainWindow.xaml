<Window x:Class="WpfApp1.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp1"
        xmlns:pages="clr-namespace:WpfApp1.Pages"
        xmlns:xctk="http://schemas.xceed.com/wpf/xaml/toolkit"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <TabControl TabStripPlacement="Top">
            <TabItem Name="diceRollerTab">
                <TabItem.Header>Dice Roller</TabItem.Header>
                <TabItem.Content>
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="5*" />
                            <RowDefinition Height="95*" />
                        </Grid.RowDefinitions>
                        <ComboBox SelectedValue="default">
                            <ComboBoxItem x:Name="default">Default</ComboBoxItem>
                            <ComboBoxItem x:Name="wilderfeast">Wilderfeast</ComboBoxItem>
                        </ComboBox>
                        <Grid Grid.Row="1" x:Name="pageGrid">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="4*" x:Name="rollerGridColumn" />
                                <ColumnDefinition Width="1*" x:Name="logColumn" />
                            </Grid.ColumnDefinitions>
                            <Frame x:Name="rollerPresetFrame" Source="Pages/DiceRollerTab.xaml" Grid.Column="0"/>
                            <Grid x:Name="logGrid" Grid.Column="1">
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="1*" />
                                    <RowDefinition Height="5*" />
                                </Grid.RowDefinitions>
                                <TextBlock x:Name="logHeaderTextBlock"
                                           Grid.Row="0"
                                           Text="Log"
                                           VerticalAlignment="Center"
                                           HorizontalAlignment="Center"
                                           FontSize="35"
                                           />
                                <ListView Grid.Row="1" x:Name="logListView"/>
                            </Grid>
                        </Grid>
                    </Grid>
                </TabItem.Content>
            </TabItem>
            <TabItem Name="clocksTab">
                <TabItem.Header>Clocks</TabItem.Header>
            </TabItem>
            <TabItem Name="statTrackerTab">
                <TabItem.Header>Stat Tracker</TabItem.Header>
            </TabItem>
            <TabItem Name="memosTab">
                <TabItem.Header>Memos</TabItem.Header>
            </TabItem>
            <TabItem Name="sessionLogsTab">
                <TabItem.Header>Session Logs</TabItem.Header>
            </TabItem>
        </TabControl>
    </Grid>
</Window>
