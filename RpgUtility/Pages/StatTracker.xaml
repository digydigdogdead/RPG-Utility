<Page x:Class="RPGUtility.Pages.StatTracker"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:RPGUtility.Pages"
      xmlns:xctk="http://schemas.xceed.com/wpf/xaml/toolkit"
      xmlns:usercontrols="clr-namespace:RPGUtility.Controls"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="StatTracker"
      Background="WhiteSmoke">

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="1*"/>
            <ColumnDefinition Width="6*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="8*" />
            <RowDefinition Height="1*" />
        </Grid.RowDefinitions>
        <StackPanel Orientation="Vertical" VerticalAlignment="Center">
            <Button x:Name="addStatButton"
            VerticalAlignment="Top"
            HorizontalAlignment="Center"
            Content="+"
            FontSize="50"
            Margin="0,10, 0, 0"
            Width="50"
            Background="LightGreen"
            Click="addStatButton_Click"/>
            <TextBlock Text="Stat:" FontSize="20" HorizontalAlignment="Center"/>
            <TextBox x:Name="statNameTextBox"
                     HorizontalAlignment="Center"
                     Width="90"
                     Margin="0,10,0,10"
                     />
            <TextBlock Text="Value:" FontSize="20" HorizontalAlignment="Center"/>
            <xctk:IntegerUpDown x:Name="statValueIntegerUpDown"
                    HorizontalAlignment="Center"
                    Margin="0,10,0,10"
                    Width="60"
                    FontSize="20"
                    Value="1"/>
        </StackPanel>
        <Button x:Name="clearStatsButton"
                Grid.Row="1"
                Margin="5"
                Click="clearStatsButton_Click"
        >Clear</Button>
        <ScrollViewer Grid.Column="1" Grid.RowSpan="2" VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Disabled">
            <WrapPanel x:Name="statsWrapPanel"
                       Orientation="Horizontal">

            </WrapPanel>
        </ScrollViewer>
    </Grid>
</Page>
