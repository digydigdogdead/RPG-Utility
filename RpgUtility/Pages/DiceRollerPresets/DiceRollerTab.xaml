<Page x:Class="RPGUtility.Pages.DiceRollerTab"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:RPGUtility.Pages"
      xmlns:xctk="http://schemas.xceed.com/wpf/xaml/toolkit"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="530"
      Background="FloralWhite"
      Title="DiceRollerTab">

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="4*" x:Name="diceDetailsColumn" />
            <ColumnDefinition Width="1*" x:Name="rollButtonColumn" />
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="2.75*"/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <Grid Name="rollingGrid">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition />
                <RowDefinition />
            </Grid.RowDefinitions>
            <TextBlock x:Name="diceNumberTextBlock" 
                        Grid.Column="0" 
                        Grid.Row="0" 
                        Margin="10,10,10,0" 
                        FontSize="100" 
                        TextWrapping="Wrap"
                        VerticalAlignment="Bottom"
                        HorizontalAlignment="Center"
                        Text="#"/>
            <TextBlock x:Name="diceTypeTextBlock"
                        Grid.Column="1" 
                        Grid.Row="0" 
                        Margin="10,10,10,0" 
                        FontSize="100" 
                        TextWrapping="Wrap"
                        VerticalAlignment="Bottom"
                        HorizontalAlignment="Center"
                        Text="d?"/>
            <TextBlock x:Name="diceModifierTextBlock"
                        Grid.Column="2"
                        Grid.Row="0"
                        FontSize="100"
                        Margin="10,10,10,0"
                        TextWrapping="Wrap"
                        VerticalAlignment="Bottom"
                        HorizontalAlignment="Center"
                        Text="+"/>
            <xctk:IntegerUpDown x:Name="diceNumberUpDown" 
                            Grid.Column="0" 
                            Grid.Row="1" 
                            Margin="10,0,10,10" 
                            VerticalAlignment="Top"
                            HorizontalAlignment="Center"
                            Width="100"
                            Height="137"
                            Value="1"
                            Minimum="1"
                            FontSize="45"
                            Background="Transparent"/>
            <xctk:IntegerUpDown x:Name="diceTypeUpDown"
                                Grid.Column="1" 
                                Grid.Row="1" 
                                Margin="10,0,10,10" 
                                VerticalAlignment="Top"
                                HorizontalAlignment="Center"
                                Width="100"
                                Height="137"
                                Value="1"
                                Minimum="1"
                                FontSize="45"
                                Background="Transparent"/>
            <xctk:IntegerUpDown x:Name="modifierUpDown"
                                Grid.Column="3" 
                                Grid.Row="1" 
                                Margin="10,0,10,10" 
                                VerticalAlignment="Top"
                                HorizontalAlignment="Center"
                                Width="100"
                                Height="137"
                                Value="0"
                                FontSize="45"
                                Background="Transparent"/>
        </Grid>
        <Button x:Name="rollButton" 
                    Grid.Column="1"
                    Grid.RowSpan="2"
                    Content="Roll Dice" 
                    Margin="10,0,10,0" 
                    VerticalAlignment="Center"
                    Height="80"
                    Click="rollButton_Click"/>
        <StackPanel Grid.Row="1"
                    VerticalAlignment="Center"
                    Orientation="Horizontal"
                    HorizontalAlignment="Center">
            <StackPanel Name="Preset1Panel">
                <Button x:Name="Preset1Button" 
                        Content="Preset 1" 
                        Margin="5"
                        Height="40"
                        Width="120"
                        Click="rollButton_Click"/>
                <Button x:Name="OverwritePreset1Button"
                        Content="+"
                        Margin="5"
                        Click="OverwritePresetButton_Click"
                        />
            </StackPanel>
            <StackPanel Orientation="Vertical"
                        Name="Preset2Panel">
                <Button x:Name="Preset2Button" 
                        Content="Preset 2" 
                        Margin="5"
                        Height="40"
                        Width="120"
                        Click="rollButton_Click"/>
                <Button x:Name="OverwritePreset2Button"
                        Content="+"
                        Margin="5"
                        Click="OverwritePresetButton_Click"
                        />
            </StackPanel>
            <StackPanel Orientation="Vertical"
                        Name="Preset3Panel">
                <Button x:Name="Preset3Button" 
                        Content="Preset 3" 
                        Margin="5"
                        Height="40"
                        Width="120"
                        Click="rollButton_Click"/>
                <Button x:Name="OverwritePreset3Button"
                        Content="+"
                        Margin="5"
                        Click="OverwritePresetButton_Click"
                        />
            </StackPanel>
        </StackPanel>
    </Grid>
</Page>
