<UserControl x:Class="RPGUtility.Controls.StatTrack"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:RPGUtility.Controls"
             xmlns:xctk="http://schemas.xceed.com/wpf/xaml/toolkit"
             mc:Ignorable="d" 
             d:DesignHeight="70" d:DesignWidth="70">
    <Grid>
        <StackPanel>
            <TextBlock Text="Stat"
                       x:Name="statNameTextBlock"
                       FontSize="15"
                       HorizontalAlignment="Center"/>
            <xctk:IntegerUpDown Value="1"
                                x:Name="statValueIntegerUpDown"
                                Margin="0,10,0,10"
                                Width="60"
                                FontSize="20"
                                HorizontalAlignment="Center" />
        </StackPanel>
    </Grid>
</UserControl>
