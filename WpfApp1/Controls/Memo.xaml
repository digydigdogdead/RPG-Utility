<UserControl x:Class="WpfApp1.Controls.Memo"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:WpfApp1.Controls"
             mc:Ignorable="d" 
             d:DesignHeight="80" d:DesignWidth="700"
             Background="Beige"
             MouseDoubleClick="UserControl_MouseDoubleClick">
    <Grid>
        <Border BorderBrush="Black" BorderThickness="2">
            <StackPanel>
                <TextBlock Text="Memo Title"
                           FontSize="20"
                           x:Name="titleTextBlock"
                           Margin="10, 10, 0 , 0"
                           FontWeight="Bold"/>
                <TextBlock x:Name="contentTextBlock"
                           TextWrapping="Wrap"
                           Margin="10"
                           FontSize="16"
                           Text="This is a sample memo content. You can edit this text to add your own notes or reminders..."
                           Foreground="DimGray"/>
            </StackPanel>
        </Border>
    </Grid>
</UserControl>
