<Page x:Class="RPGUtility.Pages.NameGenerator"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:RPGUtility.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="440" d:DesignWidth="800"
      Title="NameGenerator"
      Background="PaleTurquoise">

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="2*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="9*"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <StackPanel Grid.RowSpan="2" VerticalAlignment="Center" Orientation="Vertical">
            <TextBlock Text="Type:" FontSize="30" HorizontalAlignment="Center" Margin="0,10,0,10"/>
            <ComboBox x:Name="typeComboBox"
                      HorizontalAlignment="Center"
                      Width="200"
                      FontSize="20"
                      Margin="0,0,0,10"
                      HorizontalContentAlignment="Center"
                      SelectionChanged="typeComboBox_SelectionChanged">
                <ComboBoxItem Content="Fantasy Person" IsSelected="True" x:Name="fantasyPersonCbi"/>
                <ComboBoxItem Content="Modern Person" x:Name="modernPersonCbi"/>
                <ComboBoxItem Content="Fantasy Place" x:Name="fantasyPlaceCbi"/>
                <ComboBoxItem Content="Sci-Fi Place" x:Name="scifiPlaceCbi"/>
                <ComboBoxItem Content="Modern Place" x:Name="modernPlaceCbi"/>
                <ComboBoxItem Content="Monster" x:Name="monsterCbi"/>
            </ComboBox>
            <TextBlock Text="Gender:" FontSize="30" HorizontalAlignment="Center"/>
            <ComboBox x:Name="genderComboBox"
                      HorizontalAlignment="Center"
                      Width="200"
                      FontSize="20"
                      Margin="0,0,0,10"
                      HorizontalContentAlignment="Center">
                <ComboBoxItem Content="Neutral" x:Name="neturalCbi" IsSelected="True" />
                <ComboBoxItem Content="Male" x:Name="maleCbi"/>
                <ComboBoxItem Content="Female" x:Name="femaleCbi" />
                <ComboBoxItem Content="Any" x:Name="anyCbi" />
            </ComboBox>
        </StackPanel>
        <StackPanel Orientation="Vertical" Grid.Column="1" VerticalAlignment="Center">
            <Button x:Name="generateNameButton"
                    HorizontalAlignment="Center"
                    Content="Generate"
                    FontSize="30"
                    Margin="0,10, 0, 0"
                    Width="200"
                    Background="LightGreen"
                    Click="generateNameButton_Click"/>
            <TextBox x:Name="nameTextBox"
                     HorizontalAlignment="Center"
                     Width="400"
                     Margin="0,30,0,10"
                     FontSize="16"
                     TextAlignment="Center"
                     Height="50"
                     />
        </StackPanel>
        <Button x:Name="addMemoButton" 
                Grid.Column="1"
                Grid.Row="1"
                Content="Add Memo"
                Margin="5"
                HorizontalAlignment="Right"
                Width="70"
                Click="addMemoButton_Click"/>
    </Grid>
</Page>
