<Page x:Class="RPGUtility.Pages.InitiativeTracker"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:RPGUtility.Pages"
      xmlns:xctk="http://schemas.xceed.com/wpf/xaml/toolkit"
      mc:Ignorable="d"
      Background="FloralWhite"
      d:DesignHeight="440" d:DesignWidth="800"
      Title="InitiativeTracker">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="1*" />
            <ColumnDefinition Width="4*" />
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="9*" />
            <RowDefinition Height="1*" />
        </Grid.RowDefinitions>
        <ListView x:Name="combatantsListView" 
                  Grid.Column="1" Grid.Row="0" 
                  Margin="5" Background="Transparent" 
                  ScrollViewer.HorizontalScrollBarVisibility="Disabled"
                  ScrollViewer.VerticalScrollBarVisibility="Auto"
                  SelectionChanged="combatantsListView_SelectionChanged">
            <ListView.View>
                <GridView>
                    <GridViewColumn Header="Turn Order" Width="155" DisplayMemberBinding="{Binding TurnOrder}" />
                    <GridViewColumn Header="Name" Width="316" DisplayMemberBinding="{Binding Name}"/>
                    <GridViewColumn Header="Initiative" Width="155" DisplayMemberBinding="{Binding Initiative}"/>
                </GridView>
            </ListView.View>
        </ListView>
        <StackPanel Grid.Column="0" Grid.RowSpan="2" Margin="5" VerticalAlignment="Center">
            <Button x:Name="addCombatantButton" 
                    Content="+" 
                    Click="addCombatantButton_Click" 
                    Margin="5" 
                    Background="LightGreen" 
                    Height="75" Width="75"
                    FontSize="50"
                    VerticalContentAlignment="Center"/>
            <TextBlock Text="Name:" 
                       HorizontalAlignment="Center"
                       FontSize="27"
                       />
            <TextBox x:Name="nameTextBox" 
                     FontSize="20"
                     Margin="5"
                     />
            <TextBlock Text="Initiative:" 
                       HorizontalAlignment="Center"
                       FontSize="27"
                       />
            <xctk:IntegerUpDown x:Name="initiativeIntegerUpDown"
                                FontSize="20"
                                Margin="5"
                                Value="1"/>

            <Button x:Name="removeCombatantButton" 
                    Content="-" 
                    Click="removeCombatantButton_Click" 
                    Margin="5"
                    FontSize="20"
                    Width="30"
                    Background="OrangeRed"/>
        </StackPanel>
        <StackPanel Grid.Row="1" Grid.Column="1"
                    Orientation="Horizontal"
                    HorizontalAlignment="Right">
            <Button x:Name="previousTurnButton"
                    Content="👈"
                    Click="previousTurnButton_Click"
                    Margin="5"
                    Width="75"/>
            <Button x:Name="nextTurnButton"
                    Content="👉"
                    Click="nextTurnButton_Click"
                    Margin="5"
                    Width="75"/>

        </StackPanel>
    </Grid>
</Page>
