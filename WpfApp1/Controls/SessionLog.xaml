<UserControl x:Class="RPGUtility.Controls.SessionLog"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:RPGUtility.Controls"
             mc:Ignorable="d" 
             d:DesignHeight="120" d:DesignWidth="120"
             MouseDoubleClick="OpenEditWindow"
             Margin="5">
    <Grid>
        <Border BorderBrush="Black" BorderThickness="2" CornerRadius="5" Background="White" Height="120" Width="120">
            <StackPanel Orientation="Vertical">
                <TextBlock x:Name="numTextBlock"
                       Text="#"
                       FontSize="30"
                       FontWeight="Bold"
                       HorizontalAlignment="Center"
                       VerticalAlignment="Top"
                       TextWrapping="Wrap"
                       Margin="5"/>
                <TextBlock x:Name="titleTextBlock"
                           Text="The Adventure of the False Flag"
                           HorizontalAlignment="Center"
                           TextWrapping="Wrap"
                           TextAlignment="Center"
                           Margin="10"/>
            </StackPanel>
        </Border>
        <Grid.ContextMenu>
            <ContextMenu>
                <MenuItem Header="Edit" x:Name="editMenuItem" Click="OpenEditWindow" />
                <MenuItem Header="Delete" x:Name="deleteMenuItem" Click="deleteMenuItem_Click" />
            </ContextMenu>
        </Grid.ContextMenu>
    </Grid>
</UserControl>
