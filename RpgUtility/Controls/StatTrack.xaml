<UserControl x:Class="RPGUtility.Controls.StatTrack"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:RPGUtility.Controls"
             xmlns:xctk="http://schemas.xceed.com/wpf/xaml/toolkit"
             mc:Ignorable="d" 
             d:DesignHeight="70" d:DesignWidth="70"
             Margin="5">
    <Grid>
        <StackPanel>
            <TextBlock Text="Stat"
                       x:Name="statNameTextBlock"
                       FontSize="15"
                       HorizontalAlignment="Center"/>
            <xctk:IntegerUpDown Value="1"
                                x:Name="statValueIntegerUpDown"
                                Margin="0,10,0,10"
                                Width="60"
                                FontSize="20"
                                HorizontalAlignment="Center"
                                ValueChanged="statValueIntegerUpDown_ValueChanged"/>
        </StackPanel>
        <Grid.ContextMenu>
            <ContextMenu>
                <MenuItem Header="Change Colour" x:Name="changeColourMenuItem">
                    <MenuItem Header="Red" Click="ChangeColour_Click" Background="PaleVioletRed" x:Name="redOption"/>
                    <MenuItem Header="Green" Click="ChangeColour_Click" Background="ForestGreen" x:Name="greenOption"/>
                    <MenuItem Header="Blue" Click="ChangeColour_Click" Background="LightBlue" x:Name="blueOption"/>
                    <MenuItem Header="Yellow" Click="ChangeColour_Click" Background="LightYellow" x:Name="yellowOption"/>
                    <MenuItem Header="Orange" Click="ChangeColour_Click" Background="Orange" x:Name="orangeOption"/>
                    <MenuItem Header="Pink" Click="ChangeColour_Click" Background="LightPink" x:Name="pinkOption"/>
                </MenuItem>
                <MenuItem Header="Delete" x:Name="deleteMenuItem" Click="deleteMenuItem_Click" />
            </ContextMenu>
        </Grid.ContextMenu>
    </Grid>
</UserControl>
