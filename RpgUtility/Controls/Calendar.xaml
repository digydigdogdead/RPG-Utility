<UserControl x:Class="RPGUtility.Controls.Calendar"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:RPGUtility.Controls"
             mc:Ignorable="d" 
             d:DesignHeight="440" d:DesignWidth="720"
             Background="LightGray">
    <Grid>
        <Grid.ContextMenu>
            <ContextMenu>
                <MenuItem Header="Add Day to Month" x:Name="AddDayMenuItem" Click="AddDayMenuItem_Click"/> 
            </ContextMenu>
        </Grid.ContextMenu>
        <Grid.RowDefinitions>
            <RowDefinition />
            <RowDefinition />
            <RowDefinition Height="12*"/>
        </Grid.RowDefinitions>
        <TextBlock Grid.Row="0"
                   x:Name="YearText"
                   FontSize="22"
                   FontWeight="Bold"
                   HorizontalAlignment="Center"
                   Text="YEAR"/>
        <StackPanel Grid.Row="1"
                    Orientation="Horizontal"
                    HorizontalAlignment="Center">
            <Button Content="◀️"
                    x:Name="PrevMonthButton"
                    Click="PrevMonthButton_Click"
                    VerticalAlignment="Center"
                    Height="25"
                    IsEnabled="False"
                    />
            <TextBlock x:Name="MonthText"
                       FontSize="20"
                       FontWeight="Bold"
                       VerticalAlignment="Center"
                       Margin="10,0"
                       Text="January"/>
            <Button Content="▶️"
                    x:Name="NextMonthButton"
                    Click="NextMonthButton_Click"
                    VerticalAlignment="Center"
                    Height="25"
                    IsEnabled="False"
                    />
        </StackPanel>
        <ScrollViewer Grid.Row="2"
                      VerticalScrollBarVisibility="Auto"
                      HorizontalScrollBarVisibility="Disabled">
            <WrapPanel x:Name="DaysPanel"
                       Margin="10"
                       Orientation="Horizontal"
                       VerticalAlignment="Top"    
                       />
        </ScrollViewer>
    </Grid>
</UserControl>
