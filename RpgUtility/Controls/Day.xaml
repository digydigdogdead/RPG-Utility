<UserControl x:Class="RPGUtility.Controls.Day"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:RPGUtility.Controls"
             mc:Ignorable="d" 
             d:DesignHeight="100" d:DesignWidth="100">
    <Grid>
        <Border BorderBrush="Black" BorderThickness="1" CornerRadius="5" Background="White" Padding="5" Margin="5">
            <StackPanel>
                <TextBlock x:Name="DayNumberText" FontSize="16" FontWeight="Bold" HorizontalAlignment="Center" Text="1"/>
                <StackPanel x:Name="EventsPanel"
                            HorizontalAlignment="Left"/>
            </StackPanel>
        </Border>
    </Grid>
</UserControl>
