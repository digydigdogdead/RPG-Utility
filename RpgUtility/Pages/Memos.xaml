<Page x:Class="RPGUtility.Pages.Memos"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:usercontrols="clr-namespace:RPGUtility.Controls"
      xmlns:local="clr-namespace:RPGUtility.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Memos"
      Background="NavajoWhite">

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="89*"/>
            <ColumnDefinition Width="711*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="8*"/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <Button x:Name="addMemoButton"
                VerticalAlignment="Center"
                HorizontalAlignment="Center"
                Content="+"
                FontSize="50"
                Width="50"
                Background="LightGreen"
                Click="addMemoButton_Click"/>
        <Button x:Name="clearMemosButton"
                        Grid.Row="1"
                        Margin="5"
                        Click="clearMemosButton_Click"
                        Content="Clear"
                        />
        <ScrollViewer Grid.Column="1"
                      Grid.RowSpan="2"
                      VerticalScrollBarVisibility="Auto"
                      >
            <StackPanel x:Name="memosStackPanel"
                        Orientation="Vertical"
                        VerticalAlignment="Top"
                        HorizontalAlignment="Stretch"
                        />
        </ScrollViewer>
    </Grid>
</Page>
