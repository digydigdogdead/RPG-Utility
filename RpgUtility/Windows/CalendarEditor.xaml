<Window x:Class="RPGUtility.Windows.CalendarEditor"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:xctk="http://schemas.xceed.com/wpf/xaml/toolkit"
        xmlns:local="clr-namespace:RPGUtility.Windows"
        mc:Ignorable="d"
        Title="Calendar Editor" Height="450" Width="500">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition Width="1.5*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="10*" />
            <RowDefinition Height="2*"/>
        </Grid.RowDefinitions>
        <StackPanel Orientation="Vertical"
                    VerticalAlignment="Center"
                    HorizontalAlignment="Center">
            <TextBlock Text="Month Name:"
                       Margin="5"
                       FontWeight="Bold"
                       FontSize="20"
                       HorizontalAlignment="Center"/>
            <TextBox x:Name="MonthNameTextBox"
                     FontSize="16"/>
            <TextBlock Text="Days in Month:"
                       Margin="5"
                       FontWeight="Bold"
                       FontSize="20"/>
            <xctk:IntegerUpDown Value="30"
                                x:Name="DaysInMonthIntegerUpDown"
                                Width="100"
                                FontSize="16"
                                Margin="0,0,0,10"
                                Minimum="1"/>
            <StackPanel Orientation="Horizontal"
                        HorizontalAlignment="Center">
                <Button Content="+"
                        x:Name="AddMonthButton"
                        Click="AddMonthButton_Click"
                        Background="LightGreen"
                        Margin="5"
                        FontWeight="Bold"
                        Width="30"
                        Height="30"/>
                <Button Content="-"
                        x:Name="RemoveMonthButton"
                        Click="RemoveMonthButton_Click"
                        Margin="5"
                        Background="LightPink"
                        FontWeight="Bold"
                        Width="30"
                        Height="30"/>
            </StackPanel>
            <TextBlock Text="Starting Year:"
                       FontWeight="Bold"
                       FontSize="16"
                       HorizontalAlignment="Center"
                        />
            <xctk:IntegerUpDown Value="1000"
                                Minimum="0"
                                Width="100"
                                FontSize="16"
                                x:Name="CurrentYearIntegerUpDown"/>
            <Button x:Name="ClearButton"
                    Content="Clear"
                    HorizontalAlignment="Center"
                    FontSize="16"
                    Margin="5"
                    Click="ClearButton_Click"/>
        </StackPanel>
        <StackPanel Orientation="Vertical"
                    HorizontalAlignment="Center"
                    VerticalAlignment="Center"
                    Grid.Row="1">
            <Button Content="Use Gregorian Calendar"
                    x:Name="UseGregorianButton"
                    Click="UseGregorianButton_Click"
                    Margin="5"
                    />
            <Button Content="Save Calendar"
                    x:Name="SaveCalendarButton"
                    Click="SaveCalendarButton_Click"
                    FontSize="20"/>
        </StackPanel>
        <ListView x:Name="MonthsListView"
                  Grid.Column="1"
                  Grid.RowSpan="2"
                  Margin="5">
            <ListView.View>
                <GridView>
                    <GridViewColumn Header="Month Name" Width="200" DisplayMemberBinding="{Binding MonthName}"/>
                    <GridViewColumn Header="Days" Width="100" DisplayMemberBinding="{Binding DaysInMonth}"/>
                </GridView>
            </ListView.View>
        </ListView>
    </Grid>
</Window>
