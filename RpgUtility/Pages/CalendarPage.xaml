<Page x:Class="RPGUtility.Pages.CalendarPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:RPGUtility.Pages"
      xmlns:mycontrols="clr-namespace:RPGUtility.Controls"
      mc:Ignorable="d" 
      d:DesignHeight="440" d:DesignWidth="780"
      Background="AntiqueWhite"
      Title="Calendar">
    <Grid x:Name="CalendarPageGrid">
        <Grid.ColumnDefinitions>
            <ColumnDefinition />
            <ColumnDefinition Width="12*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <Button Content="⚙️"
                VerticalAlignment="Center"
                HorizontalAlignment="Center"
                FontSize="24"
                VerticalContentAlignment="Center"
                Click="SettingsButton_Click"
                x:Name="SettingsButton"
                Grid.RowSpan="2"
                />
        <mycontrols:Calendar x:Name="currentCalendar"
                             Grid.Column="1"
                             Margin="10"
                             Grid.RowSpan="2"/>
        <Button x:Name="helpButton"
                Click="helpButton_Click"
                Grid.Row="1"
                VerticalAlignment="Bottom"
                HorizontalAlignment="Center"
                Content="?"
                Margin="10"
                Padding="5"
            />
    </Grid>
</Page>
