<Page x:Class="RPGUtility.Pages.WiderFeastDiceRoller"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:RPGUtility.Pages"
      xmlns:xctk="http://schemas.xceed.com/wpf/xaml/toolkit"
      mc:Ignorable="d" 
      d:DesignHeight="410" d:DesignWidth="530"
      Title="WiderFeastDiceRoller"
      Background="FloralWhite">

    <Grid>
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="4*" x:Name="diceDetailsColumn" />
                <ColumnDefinition Width="1*" x:Name="rollButtonColumn" />
            </Grid.ColumnDefinitions>
            <Grid x:Name="diceDetailsGrid">
                <Grid.RowDefinitions>
                    <RowDefinition/>
                    <RowDefinition/>
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="3*"/>
                    <ColumnDefinition Width="3*"/>
                    <ColumnDefinition Width="4*"/>
                </Grid.ColumnDefinitions>
                <TextBlock x:Name="styleDiceTextBlock" 
                           Grid.Column="0"
                           Grid.ColumnSpan="2"
                           Grid.Row="0" 
                           Margin="10,10,10,0" 
                           FontSize="50" 
                           TextWrapping="Wrap"
                           VerticalAlignment="Center"
                           HorizontalAlignment="Center"
                           Text="Style Dice"/>
                <xctk:IntegerUpDown x:Name="styleDiceUpDown"
                                    Grid.Row="1"
                                    Minimum="1"
                                    Value="1"
                                    FontSize="45"
                                    Margin="10,70,10,70"/>
                <ComboBox x:Name="advComboBox"
                          Grid.Column="1"
                          Grid.Row="1"
                          Margin="10,70,10,70"
                          SelectedIndex="0"
                          FontSize="20"
                          VerticalContentAlignment="Center"
                          >
                    <ComboBoxItem Content="Normal" x:Name="normalCbi"/>
                    <ComboBoxItem Content="Adv" x:Name="advantageCbi"/>
                    <ComboBoxItem Content="Dis" x:Name="disadvantageCbi"/>
                </ComboBox>
                <TextBlock x:Name="actionDiceTextBlock"
                           Grid.Column="2"
                           Text="Action Die"
                           VerticalAlignment="Center"
                           HorizontalAlignment="Center"
                           FontSize="50"
                           TextWrapping="Wrap"
                           TextAlignment="Center"/>
                <ComboBox x:Name="actionDieComboBox"
                          Grid.Column="2"
                          Grid.Row="1"
                          FontSize="20"
                          SelectedIndex="0"
                          Margin="10,70,10,70"
                          VerticalContentAlignment="Center"
                          >
                    <ComboBoxItem Content="Focus Up" x:Name="focusUpCbi"/>
                    <ComboBoxItem Content="Go Wild" x:Name="goWildCbi"/>
                </ComboBox>

            </Grid>
            <Button x:Name="rollButton" 
                    Grid.Column="1" 
                    Content="Roll Dice" 
                    Margin="10,0,10,0" 
                    VerticalAlignment="Center"
                    Height="80"
                    Click="rollButton_Click"/>
        </Grid>
    </Grid>
</Page>
