<UserControl x:Class="RPGUtility.Controls.Combatant"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:RPGUtility.Controls"
             xmlns:xctk="http://schemas.xceed.com/wpf/xaml/toolkit"
             mc:Ignorable="d"
             Background="LightGray"
             BorderBrush="Black"
             BorderThickness="3"
             d:DesignHeight="66" d:DesignWidth="620">
    <Grid>
        <Grid.ContextMenu>
            <ContextMenu>
                <MenuItem Header="Quick Conditions">
                    <MenuItem Header="Asleep"
                              x:Name="asleepMenuItem"
                              Click="ConditionMenuItem_Click"
                              Tag="Asleep" />
                    <MenuItem Header="Blinded"
                              x:Name="blindedMenuItem"
                              Click="ConditionMenuItem_Click"
                              Tag="Blinded" />
                    <MenuItem Header="Bloodied"
                              x:Name="bloodiedMenuItem"
                              Click="ConditionMenuItem_Click"
                              Tag="Bloodied" />
                    <MenuItem Header="Poisoned"
                              x:Name="poisonedMenuItem"
                              Click="ConditionMenuItem_Click"
                              Tag="Poisoned" />
                </MenuItem>
                <MenuItem Header="Manage Conditions"
                          Click="OpenConditionManager" />
                <MenuItem Header="Remove"
                          Click="removeCombatantButton_Click" />
            </ContextMenu>
        </Grid.ContextMenu>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Name="NameColumn" Width="4*"/>
            <ColumnDefinition Name="InitiativeColumn" Width="1*"/>
            <ColumnDefinition Name="HealthColumn" Width="1.75*"/>
            <ColumnDefinition Name="ConditionsColumn" Width="3*"/>
            <ColumnDefinition Name="RemovalColumn" />
        </Grid.ColumnDefinitions>
        <TextBlock x:Name="nameTextBlock" 
                   Grid.Column="0"
                   FontSize="20"
                   VerticalAlignment="Center"
                   Margin="5"
                   Text="Edward Scissorhands"/>
        <xctk:IntegerUpDown x:Name="initiativeIntegerUpDown" 
                            Grid.Column="1"
                            FontSize="20"
                            VerticalAlignment="Center"
                            Margin="5"
                            Value="1"
                            ValueChanged="initiativeIntegerUpDown_ValueChanged"/>
        <StackPanel Grid.Column="2"
                    Orientation="Horizontal"
                    HorizontalAlignment="Center">
            <TextBlock Text="HP:" 
                       FontSize="20"
                       VerticalAlignment="Center"
                       Margin="5,0"/>
            <xctk:IntegerUpDown x:Name="hpIntegerUpDown"
                                FontSize="20"
                                VerticalAlignment="Center"
                                Margin="0,0,5,0"
                                Value="1"
                                ValueChanged="hpIntegerUpDown_ValueChanged"/> 
        </StackPanel>
        <ScrollViewer Grid.Column="3" VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Disabled">
            <WrapPanel x:Name="conditionsWrapPanel"
                       VerticalAlignment="Top"
                       HorizontalAlignment="Left"
                       Orientation="Horizontal">
            </WrapPanel>
        </ScrollViewer>
        <Button x:Name="removeCombatantButton" 
                Grid.Column="4"
                Content="X"
                Click="removeCombatantButton_Click"
                Margin="5"
                FontSize="20"
                Width="30"
                Background="OrangeRed"
                VerticalAlignment="Center"/>

    </Grid>
</UserControl>
