<Page x:Class="RPGUtility.Pages.SessionLogs"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:RPGUtility.Pages"
      xmlns:usercontrols="clr-namespace:RPGUtility.Controls"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="SessionLogs"
      Background="LightGray">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="89*"/>
            <ColumnDefinition Width="711*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="1*" />
            <RowDefinition Height="9*" />
        </Grid.RowDefinitions>
        <Button x:Name="addSessionLogButton"
                        VerticalAlignment="Center"
                        HorizontalAlignment="Center"
                        Grid.RowSpan="2"
                        Content="+"
                        FontSize="50"
                        Width="50"
                        Background="LightGreen"
                        Click="addSessionLogButton_Click"/>
        <ScrollViewer Grid.Column="1" Grid.Row="1" VerticalScrollBarVisibility="Auto">
            <WrapPanel x:Name="sessionLogsWrapPanel"
                       Orientation="Horizontal"
                       >
            </WrapPanel>
        </ScrollViewer>
        <StackPanel Grid.Column="1" Orientation="Horizontal">
            <TextBlock Text="🔍" VerticalAlignment="Center" FontSize="20"/>
            <TextBox x:Name="searchTextBox"
                     Margin="10"
                     VerticalAlignment="Stretch"
                     Width="600"
                     Height="25"
                     FontSize="15"
                     TextChanged="searchTextBox_TextChanged"
                     />
            <Button x:Name="clearSearchButton"
                    Content="X"
                    VerticalContentAlignment="Center"
                    FontSize="16"
                    Width="40"
                    VerticalAlignment="Center"
                    Click="clearSearchButton_Click"
                    Background="Transparent"/>
        </StackPanel>
    </Grid>
</Page>
