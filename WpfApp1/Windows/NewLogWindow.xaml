<Window x:Class="WpfApp1.Windows.NewLogWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp1.Windows"
        xmlns:xctk="http://schemas.xceed.com/wpf/xaml/toolkit"
        mc:Ignorable="d"
        Title="NewLogWindow" Height="450" Width="700">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="0.8*"/>
            <RowDefinition Height="2*"/>
            <RowDefinition Height="0.4*"/>
        </Grid.RowDefinitions>
        <StackPanel Orientation="Vertical" HorizontalAlignment="Center" VerticalAlignment="Center">
            <TextBlock FontSize="25">Session #:</TextBlock>
            <xctk:IntegerUpDown Value="1" 
                                x:Name="sessionNumberUpDown"
                                Width="50"
                                Margin="10"
                                FontSize="25"/>
        </StackPanel>
        <StackPanel Grid.Column="1" Orientation="Vertical" HorizontalAlignment="Center" VerticalAlignment="Center">
            <TextBlock FontSize="25" HorizontalAlignment="Center">Session Title:</TextBlock>
            <TextBox x:Name="sessionTitleTextBox"
                     FontSize="16"
                     Width="200"
                     Margin="10"/>
        </StackPanel>
        <StackPanel Grid.Row="1" Grid.ColumnSpan="2" Orientation="Horizontal">
            <TextBlock FontSize="20" HorizontalAlignment="Left" TextWrapping="Wrap"
                       Margin="10" Width="110">Session Description:</TextBlock>
            <TextBox x:Name="sessionDescriptionTextBox" 
                     VerticalAlignment="Stretch" Width="560" Margin="0, 10, 0, 0"
                     FontSize="12" TextWrapping="Wrap"
                     KeyDown="sessionDescriptionTextBox_KeyDown"/>
        </StackPanel>
        <Button x:Name="saveLogButton" Content="Save"
                Grid.Row="2" Grid.Column="1"
                Margin="10"
                HorizontalAlignment="Right"
                FontSize="16"
                Width="50"
                Click="saveLogButton_Click"/>
    </Grid>
</Window>
